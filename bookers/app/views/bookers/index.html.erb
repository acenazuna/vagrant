<section class="index-page">
	<h1>Books</h1>

	<!--  DBの内容をテーブルに表示 -->
	<table>
		<thead>
			<tr>
				<th>Title</th>
				<th>Body</th>
				<th colspan="3"></th>
			</tr>
		</thead>

		<tbody>
			<% @books.each do |book| %>
				<tr>
					<td><%= book.title %></td>
					<td><%= book.body %></td>
					<td><%= link_to "Show", booker_path(book.id) %></td>
					<td><%= link_to "Edit", edit_booker_path(book.id) %></td>
					<td><%= link_to "Destroy", booker_path(book.id) ,method: :delete %></td>
				</tr>
			<% end %>
		</tbody>
	</table>

</section>
